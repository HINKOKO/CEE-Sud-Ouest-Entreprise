---
import BaseLayout from '../layouts/BaseLayout.astro'
import Realisations from '../components/Realisations.astro'
import ContactForm from '../components/ContactForm.astro'
import '../styles/global.css'
const formSpreeID = import.meta.env.PUBLIC_FORMSPREE_ID

const jsonld = {
	"@context" : "https://schema.org",
	"@type" : "LocalBusiness",
	"name" : "CEE Sud Ouest",
	"description" : "Spécialiste en isolation thermique extérieure et rénovation de façades à Biarritz, Bayonne, et la côte Basque",
	"url" : "https://cee-sud-ouest.fr",
	"telephone": "+33 6 80 50 60 64",
	"priceRange" : "€€",
	"address" : {
		"@type" : "PostalAddress",
		"streetAddress" : "24 Boulevard Marcel Dassault",
		"addressLocality" : "Biarritz",
		"postalCode" : "64200",
		"addressCountry" : "FR"
	},
	"geo" : {
		"@type" : "GeoCoordinates",
		"latitude": 43.4709,
		"longitude": -1.5333
	},
	"openingHoursSpecification" : [
		{
			"@type": "OpeningHoursSpecification",
			"daysOfWeek" : ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
			"opens": "09:00",
			"closes" : "18:00"
		}
	],
	"image": "https://cee-sud-ouest.fr/logo.png",
};

const title = "CEE Sud-Ouest – Isolation Extérieure à Biarritz & Côte Basque";
const description = "Isolation thermique extérieure et ravalement de façade à Biarritz, Bayonne, Anglet, Bidart, et toute la côte basque.";
---
<!-- background: #E5B457;
background: linear-gradient(135deg, #E5B457, #D8520A -->
<BaseLayout title={title} description={description} jsonld={jsonld}>
	<!-- Hero section //\\ a voir le bg ==> bg-gradient-to-br from-[#ffaff4] to-[#e45f22]-->
	<section class="flex flex-col justify-between space-y-10 relative px-6 md:px-12 py-10 md:py-16 pt-16 md:pt-20 max-w-7xl mx-auto
					bg-gradient-to-br from-[#E5B457] to-[#D8520A] shadow-xl overflow-hidden top-[-15px]">

		<!--  div to organize contents of hero section  -->
		<div class="flex flex-col md:flex-row pt-16 justify-between items-center md:items-start gap-y-12 md:gap-16 z-10">
			
			<!-- left pane : entreprise and prez -->
			<div class="md:w-2/3 flex flex-col justify-center space-y-10 text-center md:text-left text-[#d2d5f7]">
				<h1 class="tracking-tight leading-tight text-4xl md:text-7xl font-bold text-[#d2d5f7]">
					CEE Sud-Ouest
				</h1>
				<h2 class="text-3xl md:text-5xl tracking-tighter font-semibold text-[#003049] leading-relaxed max-w-3xl mx-auto md:mx-0">
					Experts en rénovation énergétique certifiés <span class="relative hi-word-yellow">RGE</span>
				</h2>
				
				<p class="mt-4 md:mt-8 tracking-wider text-2xl md:text-3xl font-semibold" style="font-family: Edu VIC WA NT Hand Pre;">
					<strong>Jacky</strong>, fondateur passionné, +40 ans d'expérience dans la rénovation. 
					Ses équipes investies et rigoureuses sont au service de la qualité et de la performance énergétique.
				</p>
			</div>
			
			<!-- right pane : portrait and carousel beneath -->
			<div class="md:w-1/2 flex flex-col gap-y-10 items-center md:items-start justify-start">
				<div class="mt-10 w-full max-w-sm relative flex justify-center items-center mx-auto">
					<img
					src="/images/chantier-3.jpeg"
					class="w-full h-auto rounded-xl shadow-2xl rotate-[1deg] relative z-1" 
					alt="Chantier 2" 
					/>
				</div>
			  </div>
		</div>
			
		<div class="relative bg-[#003049] text-white w-full max-w-4xl mx-auto mt-12 px-6 md:px-12 py-8 rounded-2xl shadow-2xl flex flex-col items-center text-center md:text-left">
				<!-- Portrait du boss -->
				<img
				src="/images/Boss-removebg-preview.png"
				alt="Portrait du fondateur"
				class="absolute -top-8 -left-1 sm:-top-18 md:-left-12 w-26 h-26 md:w-34 md:h-34 rounded-full object-cover ring-4 ring-[#003049] shadow-xl drop-shadow bg-white"
				/>
				<!-- Texte centré -->
				<p class="mt-10 md:mt-0 text-xl md:text-2xl font-medium italic leading-relaxed max-w-2xl" >
					" Avec notre certification <span class="font-semibold underline">RGE</span>, vous bénéficiez d’un savoir-faire reconnu, 
					d’un accompagnement sur mesure et de l’accès aux aides à la rénovation énergétique. "
				</p>
				<!-- Logos RGE et prime Rénov -->
				 <div class="flex justify-center items-center gap-6 mt-6">
					 <img src="/images/RGE.avif" alt="RGE" class="h-16 md:h-18 w-16 md:w-auto mx-auto" />
					 <img src="/images/partner-pro-ITE.png" alt="partenariat PRO ITE" class="h-16 md:h-18 w-16 md:w-auto">
					 <img src="/images/prime-renov.png" alt="ma prime renov" class="h-16 md:h-18 w-16 md:w-auto mx-auto" />
				</div>
		</div>
		<div class="flex justify-center mt-12 md:mt-16 hover:scale-[1.08] transform">
			<a href="#services" class="px-8 py-5 bg-[#003049] text-white rounded-xl font-semibold shadow-lg ring-2 ring-offset-2 ring-amber-100 hover:bg-[#00263f]  duration-200">
				Nos services
			</a>
		</div>

		<!-- waves to remember basque ocean -->
		<div class="custom-shape-divider-top">
			<svg data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
				<path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" opacity=".25" class="shape-fill"></path>
				<path d="M0,0V15.81C13,36.92,27.64,56.86,47.69,72.05,99.41,111.27,165,111,224.58,91.58c31.15-10.15,60.09-26.07,89.67-39.8,40.92-19,84.73-46,130.83-49.67,36.26-2.85,70.9,9.42,98.6,31.56,31.77,25.39,62.32,62,103.63,73,40.44,10.79,81.35-6.69,119.13-24.28s75.16-39,116.92-43.05c59.73-5.85,113.28,22.88,168.9,38.84,30.2,8.66,59,6.17,87.09-7.5,22.43-10.89,48-26.93,60.65-49.24V0Z" opacity=".5" class="shape-fill"></path>
				<path d="M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46,59-8.63,112.48,12.24,165.56,35.4C827.93,77.22,886,95.24,951.2,90c86.53-7,172.46-45.71,248.8-84.81V0Z" class="shape-fill"></path>
			</svg>
		</div>
	</section>

	<!-- Services section -->
	<section id="services" class="relative px-6 md:px-12 py-20 bg-[#f8f9fa]">
	<div class="relative flex flex-col md:flex-row items-stretch max-w-6xl mx-auto">
		<!-- Bloc central - ITE -->
		<a href="/isolation-exterieure" class="group relative w-full md:w-1/2 h-64 md:h-96 overflow-hidden clip-parallelogram-left hover:scale-[1.02] transition-transform duration-300">
			<img src="/images/ite.jpeg" alt="renovation_facade"
			class="w-full h-full object-cover group-hover:brightness-75 transition duration-300" />
			<div class="absolute inset-0 bg-black/40 group-hover:bg-black/60 transition"></div>
			<div class="absolute bottom-6 left-4 text-white text-2xl font-semibold">Isolation Thermique <br /> Extérieure</div>
		</a>

		<!-- Bloc gauche - Renovation facades -->
		<a href="/renovation-facades" class="relative w-full md:w-1/2 h-64 md:h-96 overflow-hidden clip-parallelogram-center hover:scale-[1.02] transition-transform duration-300">
			<img src="/images/facades.webp" alt="renovation_facade"
			class="w-full h-full object-cover group-hover:brightness-75 transition duration-300" />
			<div class="absolute inset-0 bg-black/40 group-hover:bg-black/60 transition"></div>
			<div class="absolute bottom-6 left-4 text-white text-2xl font-semibold">Renovation de façades</div>
		</a>

		<!-- Bloc droit - conseils et audit -->
		<a href="/audit-conseil" class="group relative w-full  md:w-1/2 h-64 md:h-96 overflow-hidden clip-parallelogram-right hover:scale-[1.02] transition-transform duration-300">
			<img src="/images/audit.webp" alt="renovation_facade"
			class="w-full h-full object-cover group-hover:brightness-75 transition duration-300" />
			<div class="absolute inset-0 bg-black/40 group-hover:bg-black/60 transition"></div>
			<div class="absolute bottom-6 left-4 text-white text-2xl font-semibold">Audit et conseil</div>
		</a>
	</div>
	</section>

	<Realisations />
	<ContactForm formSpreeID={formSpreeID} />
</BaseLayout>


