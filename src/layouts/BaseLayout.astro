---
const {
    title = "Isolation Extérieure Bayonne et Côte Basque",
    description = "Spécialiste de l'isolation thermique extérieure - ITE - sur la côte Basque : maisons, immeubles, ravalement de façade et plus."
} = Astro.props;
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import '../styles/global.css'
---

<!DOCTYPE html>
<html lang="fr" x-init>
    <head>
        <meta charset="UTF-8" />
        <title>{title}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="{description}" />
        <link rel="canonical" href="https://tonsite.fr/chemin-de-la-page" />
        <meta name="robots" content="index, follow" />
        <meta property="og:description" content={description} />
        <meta property="og:type" content="website" />
        <meta property="og:locale" content="fr_FR" />
        <meta name="twitter:card" content="summary_large_image" />
        <script defer src="https://cdn.jsdelivr.net/npm/@alpinejs/intersect@3.x.x/dist/cdn.min.js"></script>
        <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    </head>
    <body>
        <Header />
        <main class="container mx-auto my-8 p-4">
            <slot />
        </main>
        <Footer />
    </body>
</html>